{
  "name": "team-task-board",
  "version": "1.0.0",
  "private": true,
  "description": "Role-based task board with auth and activity logs",
  "main": "server.js",
  "scripts": {
    "start": "PORT=3310 node server.js",
    "test": "node tests/api.test.js",
    "api:install": "npm --prefix apps/api install",
    "api:seed": "npm --prefix apps/api run seed",
    "api:dev": "npm --prefix apps/api run dev",
    "web:install": "npm --prefix apps/web install",
    "web:dev": "npm --prefix apps/web run dev",
    "monitor:ui": "node scripts/monitor-server.js",
    "monitor:smoke": "bash scripts/smoke.sh",
    "monitor:final": "bash scripts/final-check.sh",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f app",
    "docker:ps": "docker compose ps",
    "docker:seed:api": "docker compose exec api npm run seed",
    "docker:seed:qa": "docker compose --profile staging run --rm qa-seed",
    "docker:up:staging": "WEB_PORT=5174 API_PORT=4320 APP_PORT=4310 docker compose up -d --build",
    "docker:smoke:staging": "OLD_HEALTH_URL=http://127.0.0.1:4310/api/health NEW_API_BASE=http://127.0.0.1:4320/api bash scripts/smoke.sh",
    "ops:backup": "bash scripts/backup-db.sh",
    "ops:restore": "bash scripts/restore-db.sh",
    "monitor:status": "bash scripts/status.sh",
    "monitor:e2e": "bash scripts/e2e-critical.sh"
  }
}
