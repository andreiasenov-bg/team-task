# Copy this to .env.staging for local staging runs.
# Compose port overrides should be provided via environment in command:
# WEB_PORT=5174 API_PORT=4320 APP_PORT=4310

WHATSAPP_ENABLED=0
WHATSAPP_DRY_RUN=1
WHATSAPP_VERIFY_TOKEN=replace_staging_verify_token
WHATSAPP_GRAPH_VERSION=v21.0
WHATSAPP_PHONE_NUMBER_ID=replace_phone_number_id
WHATSAPP_ACCESS_TOKEN=replace_access_token
WHATSAPP_TEMPLATE_TASK_DONE=task_done
WHATSAPP_TEMPLATE_TASK_REVIEW_REJECTED=
WHATSAPP_TEMPLATE_TASK_REVIEW_REMINDER=
WHATSAPP_TEMPLATE_TASK_SLA_OVERDUE=
WHATSAPP_TEMPLATE_TASK_SLA_ESCALATED=
WHATSAPP_TEMPLATE_DIGEST_DAILY_SUMMARY=
WHATSAPP_TEMPLATE_LANG=bg
PUBLIC_BASE_URL=http://127.0.0.1:4310

SLA_REMINDER_ENABLED=1
SLA_DEFAULT_HOURS=3
SLA_REPEAT_EVERY_HOURS=3
SLA_MAX_REMINDERS=6
SLA_ESCALATION_HOURS=2
SLA_SCAN_EVERY_SECONDS=300
WIP_LIMIT_TODO=0
WIP_LIMIT_IN_PROGRESS=0
WIP_LIMIT_DONE=0

TRANSCRIPTION_ENABLED=0
TRANSCRIPTION_DRY_RUN=1
TRANSCRIPTION_PROVIDER=openai
TRANSCRIPTION_ENDPOINT=https://api.openai.com/v1/audio/transcriptions
TRANSCRIPTION_API_KEY=replace_transcription_key
TRANSCRIPTION_MODEL=gpt-4o-mini-transcribe
